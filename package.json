{
  "name": "dns-lookup-sync",
  "author": "Khiet Tam Nguyen",
  "license": "MIT",
  "description": "Synchronous version of dnsPromises.lookup -  Resolves a host name (e.g. 'nodejs.org') into the first found A (IPv4) or AAAA (IPv6) record",
  "repository": {
    "type": "git",
    "url": "https://github.com/nktnet1/dns-lookup-sync"
  },
  "version": "1.0.0",
  "files": [
    "dist",
    "scripts"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "test": "vitest run",
    "tc": "vitest run --coverage",
    "lint": "eslint './**/*.ts'",
    "lf": "eslint --fix './**/*.ts'",
    "tsc": "tsc --noEmit",
    "build": "tsdown",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "dns",
    "sync",
    "synchronous",
    "lookup",
    "dns-lookup",
    "dns-sync",
    "domain",
    "resolve",
    "IPv4",
    "IPv6",
    "comp1531"
  ],
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.1",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  }
}
